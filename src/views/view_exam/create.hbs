<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card ">
               <div class="card-header">
                   <h1>Creando exámen</h1>
               </div>
                <div class="card-body">

                    <form action="/exam/create" method="post">
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Título</label>
                            <input type="text" name="title" placeholder="Escriba aquí" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Haz un comentario a los estudiantes</label>
                            <textarea name="commentary" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                            <!--input type="text" name="que_que" placeholder="Pregunta" class="form-control"-->
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Categoría</label>
                            <select class="form-control" name="category" id="exampleFormControlSelect1" >
                                <option value="7">Todos</option>
                                <option value="1">Hardware</option>
                                <option value="2">Programación</option>
                                <option value="3">Redes</option>
                                <option value="4">Diseño gráfico</option>
                                <option value="5">Cultura General</option>
                                <option value="6">Office</option>

                            </select>
                        </div>
                        <div class="form-group">
                            <label> Nivel de complejidad</label>
                            <select class="form-control" name="level" >
                                <option value="4">Variado</option>
                                <option value="1">Facil</option>
                                <option value="2">Intermedio</option>
                                <option value="3">Dificil</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label> Respuestas desordenadas</label>
                            <select class="form-control" name="random" >
                                <option value="1">Activado</option>
                                <option value="2">Desactivado</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label> Limite de tiempo</label>
                            <select class="form-control" name="time" >
                                <option value="1">Activado</option>
                                <option value="2">Desactivado</option>
                            </select>
                        </div>


                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Cantidad de preguntas</label>
                            <select class="form-control" name="question" >
                                <option value="4" >4</option>
                                <option value="10" >10</option>
                                <option value="16" >16</option>
                                <option value="20" >20</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-success">Crear Exámen</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>