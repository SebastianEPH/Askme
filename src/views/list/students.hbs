<div class="container p-10 mx-auto">
    {{#if students}}
        <br>
        <h1 style="text-align: center">Todos los estudiantes</h1>
       <div class="row mx-auto">
           {{#each students}}
               <div class="row p-4 mx-auto" >
                   <div class="row p-3 text-center">
                       <img class="rounded-circle" src="{{ifMenPicture user_is_male '../img/profile/' 'gen-men.png' 'gen-girl.png' 'gen-other.png'}}" alt="photo profile {{user_nick}}" width="140" height="140">

                   </div>
                   <div class="p-2">
                       <div class="card p-1">
                           <div class="mx-auto">
                               <div class="d-flex position-relative">
                                   <!--svg class="bd-placeholder-img flex-shrink-0 me-3" width="144" height="144" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Generic placeholder image" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Generic placeholder image</title><rect width="100%" height="100%" fill="#868e96" style="--darkreader-inline-fill:#585f63;" data-darkreader-inline-fill=""></rect></--svg-->
                                   <div class="p-2">
                                       <div style="width: 18rem; ">
                                           <h4 class="mt-0">{{user_fullname}}</h4>
                                           {{#if user_email}}
                                               <p>Correo: {{user_email}}</p>
                                           {{/if}}
                                           {{#if user_phone}}
                                               <p>Teléfono: {{user_phone}}</p>
                                           {{/if}}
                                           <p>Fecha de creación: {{getOnlyDate user_created}}</p>                                                         </span>
                                       </div>
                                   </div>
                               </div>
                           </div>
                       </div>
                   </div>
               </div>
           {{/each}}
       </div>
        <div class="col-md-7 mx-auto">
            <br><br><br><br><br>
            <div class="card ">
                <a href="#" class="btn btn-danger">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-up" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/>
                    </svg>
                    Ir Arriba
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-up" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/>
                    </svg>
                </a>
            </div>
        </div>

    {{else}}
        <br>
        <h1 style="text-align: center">No existe ningun estudiante</h1>
    {{/if}}

</div>