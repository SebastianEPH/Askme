<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card ">
               <div class="card-header">
                   <h1>Creando exámen</h1>
               </div>
                <div class="card-body">

                    <form action="/exam/create" method="post">
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Título</label>
                            <input type="text" name="title" placeholder="Escriba aquí" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Haz un comentario a los estudiantes</label>
                            <textarea name="commentary" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                            <!--input type="text" name="que_que" placeholder="Pregunta" class="form-control"-->
                        </div>

                        <div class="form-group">
                            <label> Limite de tiempo</label>
                            <select class="form-control" name="time" >
                                <option value="1">Activado</option>
                                <option value="2">Desactivado</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Cantidad de preguntas</label>
                            <select class="form-control" name="question" >
                                <option value="4" >4</option>
                                <option value="10" >10</option>
                                <option value="16" >16</option>
                                <option value="20" >20</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-success">Crear Exámen</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {{#if data}}
        {{#if all}}
            <h1 style="text-align: center">Filtrar por <span class="badge bg-secondary"></span></h1>
        {{else}}
            <h1>Mis preguntas<span class="badge bg-secondary"></span></h1>
        {{/if}}
        <br>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">

        <div class="portfolio">
            <div class="container">
                <div style="text-align: center;">
                    <h4>Categoría de pregunta<span class="badge bg-secondary"></span></h4>
                    <button class="btn btn-outline-primary filter-button" data-filter="all">Todos</button>
                    <button class="btn btn-outline-primary filter-button" data-filter="1">Hardware</button>
                    <button class="btn btn-outline-primary filter-button" data-filter="2">Programación</button>
                    <button class="btn btn-outline-primary filter-button" data-filter="3">Redes</button>
                    <button class="btn btn-outline-primary filter-button" data-filter="4">Diseño gráfico</button>
                    <button class="btn btn-outline-primary filter-button" data-filter="5">Cultura General</button>
                    <button class="btn btn-outline-primary filter-button" data-filter="6">Office</button>
                </div>
                <br>
                <div style="text-align: center;">
                    <h4>Nivel de complejidad<span class="badge bg-secondary"></span></h4>
                    <button class="btn btn-outline-success filter-button" data-filter="1l">Nivel Básico</button>
                    <button class="btn btn-outline-warning filter-button" data-filter="2l">Nivel Intermedio</button>
                    <button class="btn btn-outline-danger filter-button" data-filter="3l">Nivel Avanzado</button>
                </div>
                <br>
                <div style="text-align: center;">
                    <h4>Tipo de Pregunta<span class="badge bg-secondary"></span></h4>
                    <button class="btn btn-outline-dark filter-button" data-filter="1t">Verdadero o Falso</button>
                    <button class="btn btn-outline-dark filter-button" data-filter="2t">2 Alternativas</button>
                    <button class="btn btn-outline-dark filter-button" data-filter="3t">3 Alternativas</button>
                    <button class="btn btn-outline-dark filter-button" data-filter="4t">4 Alternativas</button>
                </div>

                <br><br>

                <div class="row">
                    {{#each data}}

                        <div class="gallery_product col-md-4 filter center {{cat_id}}  {{lev_id }}l  {{ty_id}}t">

                            <div class="card text-center  ">
                                <div class="card-body ">
                                    <!--a href=""-->
                                    <div class="text-left">
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input" id="dropdownCheck2">
                                        </div>
                                    </div>

                                    <h3 class="card-title " style="color: blue">{{que_que}}</h3> <!-- text-uppercase -->
                                    <!--/a-->
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">{{category   cat_id}}</li>
                                        <li class="list-group-item">{{level      lev_id }}</li>
                                        <li class="list-group-item">{{type       ty_id}}</li>
                                        <li class="list-group-item"></li>

                                        <li class="list-group-item"></li>
                                    </ul>
                                    <select class="form-select form-select-sm" >
                                        <option  {{checkQuestionTrueSelected 1 que_true}}>{{que_1}}</option>
                                        <option {{checkQuestionTrueSelected 2 que_true}} >{{que_2}}</option>
                                        <option{{checkQuestionTrueSelected 3 que_true}}>{{que_3}}</option>
                                        <option {{checkQuestionTrueSelected 4 que_true}}>{{que_4}}</option>
                                    </select>

                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script>
            $(document).ready(function(){
                $(".filter-button").click(function(){
                    var value = $(this).attr('data-filter');

                    if (value === 'all'){
                        $('.filter').show('1000');
                    }else{
                        $('.filter').not('.'+value).hide('3000');
                        $('.filter').filter('.'+value).show('3000');
                    }
                });
                if($('.filter-button').removeClass('active')){
                    $(this).removeClass('active');
                }
                $(this).addClass('active');
            });
        </script>
    {{else}}
        <h1>No se encontró ninguna pregunta<span class="badge bg-secondary"></span></h1>
        <br>

        <a href="/question/add" class="btn btn-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
            </svg>
            Agregar una Pregunta
        </a>
    {{/if}}

    <br>


</div>



