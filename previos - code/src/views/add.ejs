<%-include ('partials/_header')%>

<h1>Agregar Preguntas </h1>
<br>
<br>

<div class="row mt-10" >

    <div class="col-md-5">
        <div class="card-body">
            <form action="/save" method="post">
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Categoría</label>
                    <select class="form-control" name="cat_id" id="exampleFormControlSelect1" >
                        <option value="1">Hardware</option>
                        <option value="2">Redes</option>
                        <option value="3">Software</option>
                    </select>
                </div>
                <div class="form-group">Nivel de complejidad</label>
                    <select class="form-control" name="lev_id" >
                        <option value="1">Inicial</option>
                        <option value="2">Primaria</option>
                        <option value="3">Secundaria</option>
                        <option value="4">Universidad</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Tipo de pregunta</label>
                    <select class="form-control" name="ty_id" >
                        <option value="1">Verdadero y Falso</option>
                        <option value="2">2 respuestas falsas</option>
                        <option value="3">3 respuestas falsas</option>
                        <option value="4">4 respuestas falsas</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="exampleFormControlSelect1">Haz una pregunta</label>
                    <textarea name="que_que" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                    <!--input type="text" name="que_que" placeholder="Pregunta" class="form-control"-->
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Opción 1 </label>
                    <input type="text" name="que_1" placeholder="respuesta" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Opción 2 </label>
                    <input type="text" name="que_2" placeholder="respuesta" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Opción 3</label>
                    <input type="text" name="que_3" placeholder="respuesta" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Opción 4</label>
                    <input type="text" name="que_4" placeholder="Escri" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Opción Correcta</label>
                    <select class="form-control" name="que_true" >
                        <option value="1">Opción 1</option>
                        <option value="2">Opción 2</option>
                        <option value="3">Opción 3</option>
                        <option value="4">Opción 4</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-success">Guardar Pregunta</button>
            </form>
        </div>
    </div>
</div>


<%include ('partials/_footer')%>