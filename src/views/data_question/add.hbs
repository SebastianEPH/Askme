<div class="container p-10">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <form action="/question/add" method="post">
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Categoría</label>
                            <select class="form-control" name="cat_id" id="exampleFormControlSelect1" >
                                <option value="1">Hardware</option>
                                <option value="2">Programación</option>
                                <option value="3">Redes</option>
                                <option value="4">Diseño gráfico</option>
                                <option value="5">Cultura General</option>
                                <option value="6">Office</option>

                            </select>
                        </div>
                        <div class="form-group">
                            <label> Nivel de complejidad</label>
                            <select class="form-control" name="lev_id" >
                                <option value="1">Facil</option>
                                <option value="2">Intermedio</option>
                                <option value="3">Dificil</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Tipo de pregunta</label>
                            <select class="form-control" name="ty_id" >
                                <option value="1">Verdadero y Falso</option>
                                <option value="2">2 Alternativas</option>
                                <option value="3">3 Alternativas</option>
                                <option value="4">4 Alternativas</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Haz una pregunta</label>
                            <textarea name="que_que" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                            <!--input type="text" name="que_que" placeholder="Pregunta" class="form-control"-->
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Alternativa 1 </label>
                            <input type="text" name="que_1" placeholder="Escribe una alternativa" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Alternativa 2 </label>
                            <input type="text" name="que_2" placeholder="Escribe una alternativa" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Alternativa 3</label>
                            <input type="text" name="que_3" placeholder="Escribe una alternativa" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Alternativa 4</label>
                            <input type="text" name="que_4" placeholder="Escribe una alternativa" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Escoge la alternativa correcta</label>
                            <select class="form-control" name="que_true" >
                                <option value="1" >Alternativa 1</option>
                                <option value="2" >Alternativa 2</option>
                                <option value="3" >Alternativa 3</option>
                                <option value="4" >Alternativa 4</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-success">Guardar Pregunta</button>
                        <a href="/question/add" class="btn btn-light">Limpiar</a>


                    </form>
                </div>
            </div>
        </div>
    </div>
</div>