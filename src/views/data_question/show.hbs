<div class="conteiner p-4">
    <div class="row">
        {{#each question}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="">
                            <h3 class="card-title text-uppercase">{{que_que}}</h3>
                        </a>
                        <p class="m-2">{{category   cat_id}}</p>
                        <p class="m-2">{{level      lev_id }}</p>
                        <p class="m-2">{{type       ty_id}}</p>
                        <p class="m-2">{{timeago    que_created}}</p>

                        <a href="/question/edit/{{que_id}}" class="btn btn-warning">Editar</a>
                        <a href="/question/delete/{{que_id}}" class="btn btn-danger">Eliminar></a>
                    </div>
                </div>
            </div>
         {{/each}}
    </div>
</div>