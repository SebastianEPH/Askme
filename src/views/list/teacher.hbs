<div class="container p-10 mx-auto">
    {{#if teacher}}
        <br>
        <h1 class="animate__animated animate__backInUp" style="text-align: center">Todos los Docentes</h1>
        <div class="row mx-auto">
            {{#each teacher}}
                <div class="row p-4 mx-auto animate__animated animate__backInDown" >
                    <div class="row p-3 text-center">
                        <img class="rounded-circle" src="{{ifMenPicture user_is_male '../img/profile/' 'gen-men.png' 'gen-girl.png' 'gen-other.png'}}" alt="photo profile {{user_nick}}" width="140" height="140">

                    </div>
                    <div class="p-2">
                        <div class="card p-1">
                            <div class="mx-auto">
                                <div class="d-flex position-relative">
                                    <!--svg class="bd-placeholder-img flex-shrink-0 me-3" width="144" height="144" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Generic placeholder image" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Generic placeholder image</title><rect width="100%" height="100%" fill="#868e96" style="--darkreader-inline-fill:#585f63;" data-darkreader-inline-fill=""></rect></--svg-->
                                    <div class="p-2">
                                        <div style="width: 18rem; ">
                                            <h4 class="mt-0">{{user_fullname}}</h4>
                                            {{#if user_email}}
                                                <p>Correo: {{user_email}}</p>
                                            {{/if}}
                                            {{#if user_phone}}
                                                <p>Teléfono: {{user_phone}}</p>
                                            {{/if}}
                                            <p>Fecha de creación: {{getOnlyDate user_created}}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                             {{#if ../exam}}
                                 {{#each  ../exam }}
                                     {{#if (isMeExam user_id ../user_id)}}
                                         <button class="accordion-button collapsed btn-outline-dark" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne{{id}}" aria-expanded="false" aria-controls="flush-collapseOne{{id}}">
                                             <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-book" viewBox="0 0 16 16">
                                                 <path d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811V2.828zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492V2.687zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z"/>
                                             </svg>
                                             {{title}}
                                         </button>
                                         <div class="bd-example bg-light mx-auto">
                                             <div class="accordion accordion-flush" id="accordionFlushExample">

                                                 <div class="accordion-item">
                                                     <div id="flush-collapseOne{{id}}" class="accordion-collapse collapse" aria-labelledby="flush-headingOne{{id}}" data-bs-parent="#accordionFlushExample" style="">
                                                         <div >{{commentary}}</div>
                                                     </div>
                                                 </div>
                                             </div>
                                         </div>
                                     {{/if}}
                                 {{/each}}
                             {{/if}}

                        </div>
                    </div>
                </div>
            {{/each}}
        </div>

        <div class="col-md-7 mx-auto animate__animated animate__backInUp">
            <br><br><br><br><br>
            <div class="card ">
                <a href="#" class="btn btn-info">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-up" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/>
                    </svg>
                    Ir Arriba
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-up" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/>
                    </svg>
                </a>
            </div>
        </div>

    {{else}}
        <br>
        <h1 class="animate__heartBeat" style="text-align: center">No existe ningun docente</h1>
    {{/if}}

</div>