<form action="/exam/create" method="post">

<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card ">
               <div class="card-header">
                   <h1>Creando examen</h1>
               </div>
                <div class="card-body">


                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Título</label>
                            <input type="text" name="title" placeholder="Escriba aquí" class="form-control" minlength="6" required>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Comentario</label>
                            <textarea name="commentary" class="form-control" id="exampleFormControlTextarea1" rows="3" minlength="6" required></textarea>
                            <!--input type="text" name="que_que" placeholder="Pregunta" class="form-control"-->
                        </div>

                        <div class="form-group">
                            <label> Tiempo de duración del examen</label>
                            <select class="form-control" name="time" >
                                <option value="1">10 minutos</option>
                                <option value="2">20 minutos</option>
                                <option value="3">30 minutos</option>
                                <option value="4" selected>45 minutos</option>
                                <option value="5">1 Hora</option>
                                <option value="6">1 Hora y 15 minutos</option>
                                <option value="7">1 Hora y 30 minutos</option>
                                <option value="8">1 Hora y 45 minutos</option>
                                <option value="9">2 Hora</option>
                                <option value="10">2 Hora y 15 minutos</option>
                                <option value="11">2 Hora y 30 minutos</option>
                                <option value="12">2 Hora y 45 minutos</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Categoría</label>
                            <select class="form-control" name="category" id="exampleFormControlSelect1" >
                                <option value="7">Todos</option>
                                <option value="1">Hardware</option>
                                <option value="2">Programación</option>
                                <option value="3">Redes</option>
                                <option value="4">Diseño gráfico</option>
                                <option value="5">Cultura General</option>
                                <option value="6">Office</option>

                            </select>
                        </div>
                        <div class="form-group">
                            <label> Nivel de complejidad</label>
                            <select class="form-control" name="level" >
                                <option value="4">Variado</option>
                                <option value="1">Facil</option>
                                <option value="2">Intermedio</option>
                                <option value="3">Dificil</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-success">Crear Examen</button>
                </div>
            </div>
        </div>
    </div>

    {{#if data}}
        {{#if all}}
            <h1 style="text-align: center">Filtrar por <span class="badge bg-secondary"></span></h1>
        {{else}}
            <h1>Mis preguntas<span class="badge bg-secondary"></span></h1>
        {{/if}}
        <br>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">

        <div class="portfolio">
            <div class="container">
                <div style="text-align: center;">
                    <h4>Categoría de pregunta<span class="badge bg-secondary"></span></h4>
                    <button type="button" class="btn btn-outline-primary filter-button" data-filter="all">Todos</button>
                    <button type="button" class="btn btn-outline-primary filter-button" data-filter="1">Hardware</button>
                    <button type="button" class="btn btn-outline-primary filter-button" data-filter="2">Programación</button>
                    <button type="button" class="btn btn-outline-primary filter-button" data-filter="3">Redes</button>
                    <button type="button" class="btn btn-outline-primary filter-button" data-filter="4">Diseño gráfico</button>
                    <button type="button" class="btn btn-outline-primary filter-button" data-filter="5">Cultura General</button>
                    <button type="button" class="btn btn-outline-primary filter-button" data-filter="6">Office</button>
                </div>
                <br>
                <div style="text-align: center;">
                    <h4>Nivel de complejidad<span class="badge bg-secondary"></span></h4>
                    <button type="button"  class="btn btn-outline-success filter-button" data-filter="1l">Nivel Básico</button>
                    <button type="button"  class="btn btn-outline-warning filter-button" data-filter="2l">Nivel Intermedio</button>
                    <button type="button"  class="btn btn-outline-danger filter-button" data-filter="3l">Nivel Avanzado</button>
                </div>
                <br>
                <div style="text-align: center;">
                    <h4>Tipo de Pregunta<span class="badge bg-secondary"></span></h4>
                    <button type="button" class="btn btn-outline-dark filter-button" data-filter="1t">Verdadero o Falso</button>
                    <button type="button" class="btn btn-outline-dark filter-button" data-filter="2t">2 Alternativas</button>
                    <button type="button" class="btn btn-outline-dark filter-button" data-filter="3t">3 Alternativas</button>
                    <button type="button" class="btn btn-outline-dark filter-button" data-filter="4t">4 Alternativas</button>
                </div>

                <br><br>

                <div class="row">


                    {{#each data}}

                        <div class="gallery_product col-md-4 filter center {{cat_id}}  {{lev_id }}l  {{ty_id}}t">

                            <div class="card text-center  ">
                                <div class="card-body ">

                                    <div class="form-check text-left " >

                                        <input type="checkbox" class="form-check-input" name="chosen_questions" value="{{que_id}}">
                                    </div>


                                    <h3 class="card-title " style="color: blue">{{que_que}}</h3> <!-- text-uppercase -->
                                    <!--/a-->
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">{{category   cat_id}}</li>
                                        <li class="list-group-item">{{level      lev_id }}</li>
                                        <li class="list-group-item">{{type       ty_id}}</li>

                                        <li class="list-group-item"></li>
                                        <select class="text-center" >
                                            <option  {{checkQuestionTrueSelected 1 que_true}}>{{que_1}}</option>
                                            <option  {{checkQuestionTrueSelected 2 que_true}}>{{que_2}}</option>
                                            <option  {{checkQuestionTrueSelected 3 que_true}}>{{que_3}}</option>
                                            <option  {{checkQuestionTrueSelected 4 que_true}}>{{que_4}}</option>
                                        </select>

                                        <li class="list-group-item"></li>

                                    </ul>


                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script>
            $(document).ready(function(){
                $(".filter-button").click(function(){
                    var value = $(this).attr('data-filter');

                    if (value === 'all'){
                        $('.filter').show('1000');
                    }else{
                        $('.filter').not('.'+value).hide('3000');
                        $('.filter').filter('.'+value).show('3000');
                    }
                });
                if($('.filter-button').removeClass('active')){
                    $(this).removeClass('active');
                }
                $(this).addClass('active');
            });
        </script>
    {{else}}
        <h1>No se encontró ninguna pregunta<span class="badge bg-secondary"></span></h1>
        <br>

        <a href="/question/add" class="btn btn-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
            </svg>
            Agregar un Examen
        </a>
    {{/if}}

    <br>




</div>

