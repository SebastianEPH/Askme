<div class="container p-10">
    <br>
    <br>
    <h1>Resultados del examen</h1>
    <br><br><div class="row">
    <div class="container">
        <div class="progress">
            <div class="progress-bar bg-success" role="progressbar" style="width: {{percentage que_total que_true_reply}}%" aria-valuenow="4" aria-valuemin="0" aria-valuemax="{{que_total}}"></div>
        </div>
        <div class="progress">
            <div class="progress-bar bg-warning" role="progressbar" style="width: {{percentage que_total que_nothing_reply}}%" aria-valuenow="4" aria-valuemin="0" aria-valuemax="{{que_total}}"></div>
        </div>
        <div class="progress">
            <div class="progress-bar bg-danger" role="progressbar" style="width: {{percentage que_total que_false_reply}}%" aria-valuenow="4" aria-valuemin="0" aria-valuemax="{{que_total}}"></div>
        </div>
        <br>
        <h2>Su nota es de: {{note que_true_reply que_total}}</h2>
        <br>
        <br>

    </div>
    {{#each questions}}
        <div class="col-md-7 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <h4 style="text-align: center">{{{que_que}}} </h4>

                    <br>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="{{que_id}}" id="{{que_id}}" value="{{que_id}}" {{checkQuestionTrue 1 que_true}}>
                        <label class="form-check-label" for="exampleRadios1">
                            {{{que_1}}}
                        </label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="{{que_id}}" id="{{que_id}}" value="{{que_id}}"{{checkQuestionTrue 2 que_true}}>
                        <label class="form-check-label" for="exampleRadios2">
                            {{{que_2}}}
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="{{que_id}}" id="{{que_id}}" value="{{que_id}}"{{checkQuestionTrue 3 que_true}}>
                        <label class="form-check-label" for="exampleRadios3">
                            {{{que_3}}}
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="{{que_id}}" id="{{que_id}}" value="{{que_id}}"{{checkQuestionTrue 4 que_true}}>
                        <label class="form-check-label" for="exampleRadios4">
                            {{{que_4}}}
                        </label>
                    </div>
                    <br>
                    <br>
                    <!--div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Respuesta correcta:</span>
                        <input type="text" value="{{ isQuestionTrue que_true que_1 que_2 que_3 que_4}}" disabled class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                    </div-->
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Usted respondió: </span>
                        <input type="text" value="{{getReplyUser ../que_list_reply @index que_1 que_2 que_3 que_4}}" disabled class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                    </div>
                    <div class="progress">
                        <div class="progress-bar {{isTrue_falseNothing ../que_list_reply @index  que_true}}" role="progressbar" style="width: 100%" aria-valuenow="4" aria-valuemin="0" aria-valuemax="{{que_total}}"></div>
                    </div>

                </div>
            </div>
        </div>
        <br>
        <br>
        <br>
    {{/each}}

</div>

    <div class="container">


        <br>
        <br>
        <br>
        <br>
        {{#if is_init}}
            <a href="#" class="list-group-item list-group-item-action list-group-item-danger">
                Recuerda que una vez responda no podrá volver a la pregunta anterior</a>
        {{/if}}
    </div>
</div>
