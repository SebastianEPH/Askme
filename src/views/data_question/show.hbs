<div class="container p-4">
    {{#if data}}
        {{#if all}}
            <h1 style="text-align: center">Todas las preguntas <span class="badge bg-secondary"></span></h1>
        {{else}}
            <h1>Mis preguntas<span class="badge bg-secondary"></span></h1>
        {{/if}}
        <br>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">

        <div class="portfolio">
            <div class="container">
                <div style="text-align: center;">
                    <button class="btn btn-outline-primary filter-button" data-filter="all">todos</button>
                    <button class="btn btn-outline-primary filter-button" data-filter="1">Hardware</button>
                    <button class="btn btn-outline-primary filter-button" data-filter="2">Programaci칩n</button>
                    <button class="btn btn-outline-primary filter-button" data-filter="3">Redes</button>
                    <button class="btn btn-outline-primary filter-button" data-filter="4">Dise침o gr치fico</button>
                    <button class="btn btn-outline-primary filter-button" data-filter="5">Cultura General</button>
                    <button class="btn btn-outline-primary filter-button" data-filter="6">Office</button>
                </div>
                <br><br>
                <div class="row">
                    {{#each data}}
                        <div class="gallery_product col-md-4 filter center {{cat_id}}">

                                    <div class="card text-center">
                                        <div class="card-body">
                                            <!--a href=""-->
                                            <h3 class="card-title " style="color: darkmagenta">{{que_que}}</h3> <!-- text-uppercase -->
                                            <!--/a-->
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item">{{category   cat_id}}</li>
                                                <li class="list-group-item">{{level      lev_id }}</li>
                                                <li class="list-group-item">{{type       ty_id}}</li>
                                                <li class="list-group-item"></li>
                                            </ul>
                                            <!--p class="m-2">{{!--timeago    que_created--}}</p-->
                                            <a href="/question/view/{{que_id}}" class="btn btn-success">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                                                    <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/>
                                                    <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
                                                </svg>
                                            </a>
                                            <a href="/question/edit/{{que_id}}" class="btn btn-warning">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5L13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175l-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                                                </svg>
                                            </a>
                                            <a href="/question/delete/{{que_id}}" class="btn btn-danger">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                                                </svg>
                                            </a>



                                        </div>
                                    </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script>
            $(document).ready(function(){
                $(".filter-button").click(function(){
                    var value = $(this).attr('data-filter');

                    if (value === 'all'){
                        $('.filter').show('1000');
                    }else{
                        $('.filter').not('.'+value).hide('3000');
                        $('.filter').filter('.'+value).show('3000');
                    }
                });
                if($('.filter-button').removeClass('active')){
                    $(this).removeClass('active');
                }
                $(this).addClass('active');
            });
        </script>
    {{else}}
        <h1>No se encontr칩 ninguna pregunta<span class="badge bg-secondary"></span></h1>
        <br>

        <a href="/question/add" class="btn btn-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
            </svg>
            Agregar una Pregunta
        </a>
    {{/if}}

</div>

